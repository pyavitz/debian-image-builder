# architecture
ARCH="arm64"
ARCH_EXT="arm64"
DEBARCH=""
CROSS_COMPILE="aarch64-linux-gnu-"
ROOTFS_ARCH="rootfs-${ARCH_EXT}"
STATIC="qemu-aarch64-static"

# device information
SERIES="rk3588s"
FAMILY="rockchip"
FAMILY_EXT="rk3588"
DTB="${SERIES}-khadas-edge2"

# default config
LINUX_DEFCONFIG="khadas-edge2_defconfig"
#LINUX_DEFCONFIG="kedges_defconfig" # vendor
UBOOT_DEFCONFIG="khadas-edge2-rk3588s_defconfig"

# partition scheme
GPT="false"
EFI="false"
VFAT="false"
P_VALUE="p2"
OFFSET="32768"

# boot config
EXTLINUX="true"
PETITBOOT="false"
BOOTINI="false"
BOOTCMD="false"

# arm trusted firmware
ATF_PLAT=""
ATF_EXT=""
RKBIN_ELF=""
RKBIN_RAM=""

# output
BOARD="khadasedge2"
OUTPUT="output/${BOARD}"

# cmdline
CONSOLE="earlycon=uart8250,mmio32,0xfeb50000 console=ttyFIQ0 console=tty0 console=both"
EXTRA="net.ifnames=0 rootflags=data=writeback"

# motd
DEFAULT_MOTD="Khadas Edge2"

# patches
UBOOT_PATCHDIR="patches/uboot"
LINUX_PATCHDIR="patches/${FAMILY}"

# image
IMGSIZE="3072MB"
IMG_EXP="${DTB}-*.img*"

# uboot logo
RANDOM_LOGO="false"

# precompiled
PRECOMPILED_UBOOT="true"
PKGVERSION="2017.09"
PRECOMPILED_UBOOT_DIR="files/boot/uboot/${BOARD}"

# force github (https://github.com/khadas/linux/)
FORCE_GITHUB="true"
GITHUB="khadas"
GITHUB_REPO="linux"
GITHUB_BRANCH="khadas-edges"
GITHUB_BRANCH_VERSION="5.10.y"

# override userdata file
FORCE_VERSION="false"
FORCE_LINUX_VERSION=""
FORCE_UBOOT_VERSION=""

# devicetree and platform
DEVICETREE="${DTB}.dtb"
DEVICETREE2=""
DEVICETREE3=""
DEVICETREE4=""
PLATFORM="${FAMILY}"

# linux packaging
LINUX_IMAGE="linux-image-${SERIES}"
LINUX_HEADERS="linux-headers-${SERIES}"
LINUX_PATH="usr/lib/${LINUX_IMAGE}/${PLATFORM}"
LINUX_DTREE="usr/lib/${LINUX_IMAGE}/${PLATFORM}/${DEVICETREE}"
LINUX_OLYS="usr/lib/${LINUX_IMAGE}/${PLATFORM}/overlays"

# install target
INSTALL_DTB="boot/${PLATFORM}/${DEVICETREE}"
INSTALL_OLYS="boot/${PLATFORM}/"
